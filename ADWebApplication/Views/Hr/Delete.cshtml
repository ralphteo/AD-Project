@model ADWebApplication.Models.Employee
@{
    ViewData["Title"] = "HR - Delete Employee";
    Layout = null;
    string roleName = ViewBag.RoleName ?? "-";
}
<!DOCTYPE html>
<html lang="en">

<head>
    <title>@ViewData["Title"]</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <script src="https://cdn.tailwindcss.com"></script>
</head>

<body>
    <div class="min-h-screen bg-gray-50 flex items-center justify-center p-6">
        <div class="bg-white w-full max-w-xl rounded-2xl shadow p-8 border">
            <h1 class="text-2xl font-bold text-gray-800 mb-2">Delete Employee</h1>
            <p class="text-gray-500 mb-6">This action cannot be undone.</p>

            <div class="bg-red-50 border border-red-200 text-red-700 rounded-lg p-4 mb-6">
                Are you sure you want to delete
                <b>@Model.FullName</b>
                (<b>@Model.Username</b>) â€” Role:
                <b>@roleName</b>?
            </div>

            <form asp-action="Delete" method="post" class="space-y-3">
                @Html.AntiForgeryToken()

                <input type="hidden" name="username" value="@Model.Username" />

                <button type="submit"
                    class="w-full bg-red-600 text-white py-3 rounded-lg font-semibold hover:bg-red-700">
                    Yes, Delete
                </button>

                <a href="@Url.Action("Index", "Hr")"
                    class="block text-center w-full bg-gray-100 text-gray-700 py-3 rounded-lg font-semibold hover:bg-gray-200">
                    Cancel
                </a>
            </form>
        </div>
    </div>
</body>

</html>