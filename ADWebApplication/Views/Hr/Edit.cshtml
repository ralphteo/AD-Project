@model ADWebApplication.ViewModels.EditEmployeeViewModel
@{
    ViewData["Title"] = "HR - Edit Employee";
    Layout = null;
    var roles = (List<ADWebApplication.Models.Role>)ViewBag.Roles;
}
<!DOCTYPE html>
<html lang="en">

<head>
    <title>@ViewData["Title"]</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <!-- Tailwind CDN injects runtime styles; SRI is not supported for this dynamic asset. -->
    <script src="https://cdn.tailwindcss.com"></script>
</head>

<body>
    <div class="min-h-screen bg-gray-50 flex items-center justify-center p-6">
        <div class="bg-white w-full max-w-xl rounded-2xl shadow p-8 border">
            <h1 class="text-2xl font-bold text-gray-800 mb-2">Edit Employee</h1>
            <p class="text-gray-500 mb-6">Update employee info, role, or reset password</p>

            <div asp-validation-summary="ModelOnly" class="text-red-600 text-sm mb-4"></div>

            <form asp-action="Edit" method="post" class="space-y-4">
                @Html.AntiForgeryToken()

                <div>
                    <label asp-for="Username" class="block text-sm font-medium text-gray-700 mb-1">Employee ID (PK)</label>
                    <input asp-for="Username" readonly class="w-full px-4 py-3 border rounded-lg bg-gray-100" />
                    <span asp-validation-for="Username" class="text-red-600 text-sm"></span>
                </div>

                <div>
                    <label asp-for="FullName" class="block text-sm font-medium text-gray-700 mb-1">Full Name</label>
                    <input asp-for="FullName" class="w-full px-4 py-3 border rounded-lg" />
                    <span asp-validation-for="FullName" class="text-red-600 text-sm"></span>
                </div>

                <div>
                    <label asp-for="Email" class="block text-sm font-medium text-gray-700 mb-1">Email</label>
                    <input asp-for="Email" class="w-full px-4 py-3 border rounded-lg" />
                    <span asp-validation-for="Email" class="text-red-600 text-sm"></span>
                </div>

                <div>
                    <label asp-for="RoleId" class="block text-sm font-medium text-gray-700 mb-1">Role</label>
                    <select asp-for="RoleId" class="w-full px-4 py-3 border rounded-lg">
                        <option value="">-- Select Role --</option>
                        @foreach (var r in roles)
                        {
                            <option value="@r.RoleId">@r.Name</option>
                        }
                    </select>
                    <span asp-validation-for="RoleId" class="text-red-600 text-sm"></span>
                </div>

                <div class="flex items-center gap-2">
                    <input asp-for="IsActive" type="checkbox" class="w-4 h-4" />
                    <label asp-for="IsActive" class="text-sm text-gray-700">Active</label>
                </div>

                <div class="border-t pt-4">
                    <p class="text-sm font-semibold text-gray-700 mb-2">Reset Password (optional)</p>

                    <div class="mb-3">
                        <label asp-for="NewPassword" class="block text-sm font-medium text-gray-700 mb-1">New Password</label>
                        <input asp-for="NewPassword" type="password" class="w-full px-4 py-3 border rounded-lg" />
                        <span asp-validation-for="NewPassword" class="text-red-600 text-sm"></span>
                    </div>

                    <div>
                        <label asp-for="ConfirmNewPassword" class="block text-sm font-medium text-gray-700 mb-1">Confirm New Password</label>
                        <input asp-for="ConfirmNewPassword" type="password"
                            class="w-full px-4 py-3 border rounded-lg" />
                        <span asp-validation-for="ConfirmNewPassword" class="text-red-600 text-sm"></span>
                    </div>
                </div>

                <button type="submit"
                    class="w-full bg-blue-600 text-white py-3 rounded-lg font-semibold hover:bg-blue-700">
                    Save Changes
                </button>

                <a href="@Url.Action("Index", "Hr")"
                    class="block text-center w-full bg-gray-100 text-gray-700 py-3 rounded-lg font-semibold hover:bg-gray-200">
                    Back to List
                </a>
            </form>
        </div>
    </div>
</body>

</html>