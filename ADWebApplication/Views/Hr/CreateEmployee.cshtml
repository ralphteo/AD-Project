@model ADWebApplication.ViewModels.CreateEmployeeViewModel
@{
    ViewData["Title"] = "HR - Create Employee";
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <title>@ViewData["Title"]</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body>
<div class="min-h-screen bg-gray-50 flex items-center justify-center p-6">
    <div class="bg-white w-full max-w-xl rounded-2xl shadow p-8 border">
        <h1 class="text-2xl font-bold text-gray-800 mb-2">HR Portal</h1>
        <p class="text-gray-500 mb-6">Create employee (Admin / Collector)</p>

        @if (TempData["Message"] != null)
        {
            <div class="bg-green-50 text-green-700 border border-green-200 rounded-lg p-3 mb-4">
                @TempData["Message"]
            </div>
        }

        <div asp-validation-summary="ModelOnly" class="text-red-600 text-sm mb-4"></div>

        <form asp-action="CreateEmployee" method="post" class="space-y-4">
            @Html.AntiForgeryToken()

            <div>
                <label class="block text-sm font-medium text-gray-700 mb-1">Full Name</label>
                <input asp-for="FullName" class="w-full px-4 py-3 border rounded-lg" />
                <span asp-validation-for="FullName" class="text-red-600 text-sm"></span>
            </div>

            <div>
                <label class="block text-sm font-medium text-gray-700 mb-1">Employee ID</label>
                <input asp-for="Username" placeholder="CO-12345" class="w-full px-4 py-3 border rounded-lg" />
                <span asp-validation-for="Username" class="text-red-600 text-sm"></span>
            </div>

            <div>
                <label class="block text-sm font-medium text-gray-700 mb-1">Email</label>
                <input asp-for="Email" class="w-full px-4 py-3 border rounded-lg" />
                <span asp-validation-for="Email" class="text-red-600 text-sm"></span>
            </div>

            <div>
                <label class="block text-sm font-medium text-gray-700 mb-1">Telephone</label>
                <input asp-for="PhoneNumber" class="w-full px-4 py-3 border rounded-lg" />
                <span asp-validation-for="PhoneNumber" class="text-red-600 text-sm"></span>
            </div>

            <div>
                <label class="block text-sm font-medium text-gray-700 mb-1">Role</label>
                <select asp-for="RoleName" class="w-full px-4 py-3 border rounded-lg">
                    <option value="">-- Select Role --</option>
                    @foreach (var r in (List<string>)ViewBag.Roles)
                    {
                        <option value="@r">@r</option>
                    }
                </select>
                <span asp-validation-for="RoleName" class="text-red-600 text-sm"></span>
            </div>
            <div>
        <label class="block text-sm font-medium text-gray-700 mb-1">Password</label>
        <input asp-for="Password" type="password"
            class="w-full px-4 py-3 border rounded-lg" />
        <span asp-validation-for="Password" class="text-red-600 text-sm"></span>
        </div>

        <div>
        <label class="block text-sm font-medium text-gray-700 mb-1">Confirm Password</label>
        <input asp-for="ConfirmPassword" type="password"
           class="w-full px-4 py-3 border rounded-lg" />
        <span asp-validation-for="ConfirmPassword" class="text-red-600 text-sm"></span>
        </div>

            <button type="submit" class="w-full bg-blue-600 text-white py-3 rounded-lg font-semibold hover:bg-blue-700">
                Create Employee
            </button>
        </form>

        <form method="post" action="@Url.Action("Logout","EmpAuth")" class="mt-4">
            @Html.AntiForgeryToken()
            <button type="submit" class="w-full bg-gray-100 text-gray-700 py-3 rounded-lg font-semibold hover:bg-gray-200">
                Logout
            </button>
        </form>
    </div>
</div>
</body>
</html>