@model ADWebApplication.Models.DTOs.DashboardKPIs

<div class="col-md-3">
    <div class="card border-0 shadow-sm">
        <div class="card-body">
            <div class="d-flex justify-content-between align-items-start mb-3">
                <div class="icon-box bg-primary bg-opacity-10">
                    <i class="bi bi-people text-primary"></i>
                </div>
                <span class="badge @(Model.UserGrowthPercent >= 0 ? "bg-success" : "bg-danger")">
                    @Model.UserGrowthPercent.ToString("+0.0;-0.0")%
                </span>
            </div>
            <h3 class="fw-bold mb-1">
                @Model.ActiveUsersWithDisposals.ToString("N0") / @Model.TotalUsers.ToString("N0")
            </h3>
            <p class="text-muted small mb-0">Active Users Participation</p>
        </div>
    </div>
</div>

<div class="col-md-3">
    <div class="card border-0 shadow-sm">
        <div class="card-body">
            <div class="d-flex justify-content-between align-items-start mb-3">
                <div class="icon-box bg-success bg-opacity-10">
                    <i class="bi bi-box text-success"></i>
                </div>
                <span class="badge @(Model.CollectionGrowthPercent >= 0 ? "bg-success" : "bg-danger")">
                    @Model.CollectionGrowthPercent.ToString("+0.0;-0.0")%
                </span>
            </div>
            <h3 class="fw-bold mb-1">@Model.TotalCollections.ToString("N0")</h3>
            <p class="text-muted small mb-0">Collections This Month</p>
        </div>
    </div>
</div>

<div class="col-md-3">
    <div class="card border-0 shadow-sm">
        <div class="card-body">
            <div class="d-flex justify-content-between align-items-start mb-3">
                <div class="icon-box bg-purple bg-opacity-10">
                    <i class="bi bi-recycle text-purple"></i>
                </div>
                <span class="badge @(Model.WeightGrowthPercent >= 0 ? "bg-success" : "bg-danger")">
                    @Model.WeightGrowthPercent.ToString("+0.0;-0.0")%
                </span>
            </div>
            <h3 class="fw-bold mb-1">@Model.TotalWeightRecycled.ToString("N1") T</h3>
            <p class="text-muted small mb-0">Total Weight Recycled</p>
        </div>
    </div>
</div>

<div class="col-md-3">
    <div class="card border-0 shadow-sm">
        <div class="card-body">
            <div class="d-flex justify-content-between align-items-start mb-3">
                <div class="icon-box bg-warning bg-opacity-10">
                    <i class="bi bi-bar-chart text-warning"></i>
                </div>
                <span class="badge @(Model.BinFillRateChange >= 0 ? "bg-success" : "bg-danger")">
                    @Model.BinFillRateChange.ToString("+0.0;-0.0")%
                </span>
            </div>
            <h3 class="fw-bold mb-1">@Model.AvgBinFillRate.ToString("N1")%</h3>
            <p class="text-muted small mb-0">Average Bin Fill Rate</p>
        </div>
    </div>
</div>