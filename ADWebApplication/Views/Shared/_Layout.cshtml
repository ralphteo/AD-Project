<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewData["Title"] - E-Waste</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" rel="stylesheet">
</head>
<body class="bg-light">
<nav class="navbar navbar-dark bg-primary">
    <div class="container">
        <span class="navbar-brand">E-Waste System</span>

        @if (User.Identity != null && User.Identity.IsAuthenticated)
        {
            <div class="dropdown">
                <button class="btn btn-outline-light dropdown-toggle rounded-pill px-4 py-2" type="button" id="userDropdown" data-bs-toggle="dropdown" aria-expanded="false" style="border: 2px solid white; font-weight: 500;">
                    <i class="bi bi-person-circle me-2"></i>@User.Identity.Name
                </button>
                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
                    <li><h6 class="dropdown-header">User: @User.Identity.Name</h6></li>
                    <li><hr class="dropdown-divider"></li>
                    <li>
                        <a class="dropdown-item" href="@Url.Action("Index", "CollectorDashboard")">
                            <i class="bi bi-speedometer2"></i> Dashboard
                        </a>
                    </li>
                    <li>
                        <a class="dropdown-item" href="@Url.Action("MyRouteAssignments", "CollectorDashboard")">
                            <i class="bi bi-map"></i> My Routes
                        </a>
                    </li>
                    <li>
                        <a class="dropdown-item" href="@Url.Action("ReportIssue", "CollectorDashboard")">
                            <i class="bi bi-exclamation-triangle"></i> Report Issue
                        </a>
                    </li>
                    <li><hr class="dropdown-divider"></li>
                    <li>
                        <form method="post" action="@Url.Action("Logout","EmpAuth")" class="px-3">
                            @Html.AntiForgeryToken()
                            <button class="dropdown-item text-danger" type="submit">
                                <i class="bi bi-box-arrow-right"></i> Logout
                            </button>
                        </form>
                    </li>
                </ul>
            </div>
        }
    </div>
</nav>

<div class="container py-4">
    @RenderBody()
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
@RenderSection("Scripts", required: false)
</body>
</html>


