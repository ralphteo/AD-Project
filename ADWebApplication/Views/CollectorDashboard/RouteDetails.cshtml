@model ADWebApplication.Models.CollectorRoute

@{
    ViewData["Title"] = "Route Details";
}

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>@Model.RouteName Details</h2>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Back to Dashboard
        </a>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <h5 class="card-title">Route Information</h5>
            <p><strong>Zone:</strong> @Model.Zone</p>
            <p><strong>Completed:</strong> @Model.CompletedPoints / @Model.TotalPoints</p>
            <p><strong>Weight Collected:</strong> @Model.TotalWeightCollected kg</p>
        </div>
    </div>

    <div class="mt-4">
        <h5>Collection Points</h5>
        <!-- TODO: Add collection points list here -->
    </div>
</div>