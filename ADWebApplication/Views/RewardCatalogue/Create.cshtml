@model RewardCatalogue
@{
    ViewData["Title"] = "Create Reward";
}

<!-- HEADER WITH BACK BUTTON -->
<div class="dash-header mb-4">
    <div class="d-flex align-items-center gap-3">
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i>
        </a>
        <div>
            <h2 class="mb-1">Create Reward</h2>
            <p class="text-muted mb-0">Add a new reward to the catalogue</p>
        </div>
    </div>
</div>

<div class="row">
    <!-- MAIN FORM SECTION -->
    <div class="col-lg-8">
        <div class="card">
            <div class="card-body">
                <form asp-action="Create" method="post">
                    @Html.AntiForgeryToken()
                    
                    <!-- VALIDATION SUMMARY -->
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                    <!-- Reward Name -->
                    <div class="mb-3">
                        <label asp-for="RewardName" class="form-label">Reward Name</label>
                        <input asp-for="RewardName" 
                               class="form-control" 
                               placeholder="e.g., $10 Shopping Voucher"
                               autofocus 
                               required />
                        <span asp-validation-for="RewardName" class="text-danger small"></span>
                    </div>

                    <!-- Description -->
                    <div class="mb-3">
                        <label asp-for="Description" class="form-label">Description</label>
                        <textarea asp-for="Description" 
                                  class="form-control" 
                                  rows="3" 
                                  placeholder="Describe what this reward offers"></textarea>
                        <span asp-validation-for="Description" class="text-danger small"></span>
                    </div>

                    <!-- Points & Category Row -->
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Points" class="form-label">Points Required</label>
                            <input asp-for="Points" 
                                   type="number" 
                                   min="1"
                                   step="1"
                                   class="form-control"
                                   value="100"
                                   required />
                            <small class="text-muted">Points required to redeem this reward</small>
                            <span asp-validation-for="Points" class="text-danger small d-block"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="RewardCategory" class="form-label">Category</label>
                            <select asp-for="RewardCategory" class="form-select" id="categorySelect">
                                <option value="">-- Select Category --</option>
                                <option value="Voucher">Voucher</option>
                                <option value="Electronics">Electronics</option>
                                <option value="Merchandise">Merchandise</option>
                                <option value="Gift Card">Gift Card</option>
                                <option value="Other">Other</option>
                            </select>
                            <span asp-validation-for="RewardCategory" class="text-danger small"></span>
                        </div>
                    </div>

                    <!-- Stock Quantity -->
                    <div class="mb-3">
                        <label asp-for="StockQuantity" class="form-label">Stock Quantity</label>
                        <input asp-for="StockQuantity" 
                               type="number" 
                               min="0"
                               step="1"
                               class="form-control"
                               value="0"
                               required />
                        <small class="text-muted">Available inventory for this reward</small>
                        <span asp-validation-for="StockQuantity" class="text-danger small d-block"></span>
                    </div>

                    <!-- Image URL -->
                    <div class="mb-3">
                        <label asp-for="ImageUrl" class="form-label">Image URL</label>
                        <input asp-for="ImageUrl" 
                               type="url" 
                               class="form-control" 
                               placeholder="https://example.com/image.jpg"
                               id="imageUrlInput" />
                        <small class="text-muted">Optional: Enter a URL for the reward image</small>
                        <span asp-validation-for="ImageUrl" class="text-danger small d-block"></span>
                    </div>

                    <!-- Availability Toggle -->
                    <div class="mb-3">
                        <div class="form-check form-switch">
                            <input asp-for="Availability" 
                                   class="form-check-input" 
                                   type="checkbox" 
                                   role="switch"
                                   aria-checked="true"
                                   checked />
                            <label asp-for="Availability" class="form-check-label">
                                Available for Redemption
                            </label>
                        </div>
                        <small class="text-muted">Users can only see and redeem available rewards</small>
                    </div>

                    <!-- ACTION BUTTONS -->
                    <div class="d-flex gap-2 mt-4">
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-check-circle me-2"></i>Create Reward
                        </button>
                        <a asp-action="Index" class="btn btn-outline-secondary">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- SIDEBAR WITH TIPS & PREVIEW -->
    <div class="col-lg-4">
        <!-- Tips Card -->
        <div class="card bg-light">
            <div class="card-body">
                <h6 class="card-title mb-3">
                    <i class="bi bi-lightbulb me-2"></i>Best Practices
                </h6>
                <ul class="small mb-0">
                    <li class="mb-2">Set competitive points costs</li>
                    <li class="mb-2">Keep stock updated regularly</li>
                    <li class="mb-2">Use high-quality images (recommended: 800x600px)</li>
                    <li class="mb-2">Mark as unavailable when out of stock</li>
                    <li>Categorize rewards for easier browsing</li>
                </ul>
            </div>
        </div>

        <!-- Image Preview Card -->
        <div class="card mt-3" id="imagePreviewCard" style="display:none;">
            <div class="card-body">
                <h6 class="card-title mb-3">
                    <i class="bi bi-eye me-2"></i>Image Preview
                </h6>
                <img id="imagePreview" 
                     class="img-fluid rounded" 
                     alt="Preview"
                     style="max-height: 200px; width: 100%; object-fit: cover;" />
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    
    <script>
        // Image URL preview
        document.getElementById('imageUrlInput').addEventListener('input', function() {
            const url = this.value;
            const preview = document.getElementById('imagePreview');
            const card = document.getElementById('imagePreviewCard');
            
            if (url && url.startsWith('http')) {
                preview.src = url;
                card.style.display = 'block';
                
                // Hide on error
                preview.onerror = function() {
                    card.style.display = 'none';
                };
            } else {
                card.style.display = 'none';
            }
        });
    </script>
}