@model IEnumerable<RewardCatalogue>
@{
    ViewData["Title"] = "Rewards Management";
    Layout = "_AdminLayout"; 
}
@* <div class="alert alert-info">
    Model is null: @(Model == null)<br/>
    Model count: @(Model?.Count() ?? 0)
</div> *@
<!-- PAGE HEADER WITH BACK TO HOME -->
<div class="dash-header mb-4">
    <div class="d-flex justify-content-between align-items-center">
        <div>
            <div class="d-flex align-items-center gap-3">
                <h2 class="mb-1">Rewards Management</h2>
                <p class="text-muted mb-0">Manage reward catalogue and inventory</p>
            </div>
        </div>
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle me-2"></i>New Reward
        </a>
    </div>
</div>

<!-- SUCCESS/ERROR ALERTS -->
@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="bi bi-check-circle me-2"></i>@TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="bi bi-exclamation-triangle me-2"></i>@TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<!-- REWARDS GRID -->
<div class="row g-3">
    @if (Model.Any())
    {
        @foreach (var reward in Model)
        {
            <div class="col-md-6 col-lg-4">
                <div class="card h-100">
                    <!-- Reward Image -->
                    @if (!string.IsNullOrEmpty(reward.ImageUrl))
                    {
                        <img src="@reward.ImageUrl" 
                             class="card-img-top" 
                             alt="@reward.RewardName" 
                             style="height: 200px; object-fit: cover;"
                             onerror="this.src='https://via.placeholder.com/400x200?text=No+Image'">
                    }
                    else
                    {
                        <div class="card-img-top bg-light d-flex align-items-center justify-content-center" style="height: 200px;">
                            <i class="bi bi-gift display-3 text-muted"></i>
                        </div>
                    }
                    
                    <div class="card-body">
                        <!-- Reward Name & Status -->
                        <div class="d-flex justify-content-between align-items-start mb-2">
                            <h5 class="card-title mb-0">@reward.RewardName</h5>
                            <span class="badge @reward.AvailabilityBadgeClass">
                                @(reward.Availability ? "Available" : "Unavailable")
                            </span>
                        </div>
                        
                        <!-- Category Badge -->
                        @if (!string.IsNullOrEmpty(reward.RewardCategory))
                        {
                            <div class="mb-2">
                                <span class="badge bg-light text-dark">
                                    <i class="bi bi-tag me-1"></i>@reward.RewardCategory
                                </span>
                            </div>
                        }
                        
                        <!-- Description -->
                        @if (!string.IsNullOrEmpty(reward.Description))
                        {
                            <p class="card-text text-muted small mb-3">
                                @(reward.Description.Length > 100 ? reward.Description.Substring(0, 100) + "..." : reward.Description)
                            </p>
                        }
                        
                        <!-- Points & Stock Info -->
                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <div>
                                <small class="text-muted d-block">Points Cost</small>
                                <strong class="text-primary h5 mb-0">@reward.Points pts</strong>
                            </div>
                            <div class="text-end">
                                <small class="text-muted d-block">Stock</small>
                                <span class="badge @reward.StockBadgeClass">
                                    @reward.StockQuantity
                                </span>
                            </div>
                        </div>

                        <!-- Stock Status -->
                        <div class="mb-3">
                            <small class="text-muted">Status: </small>
                            <strong class="@(reward.CanBeRedeemed ? "text-success" : "text-danger")">
                                @reward.StockStatus
                            </strong>
                        </div>
                        
                        <!-- Action Buttons -->
                        <div class="btn-group w-100">
                            <a asp-action="Edit" asp-route-id="@reward.RewardId" 
                               class="btn btn-sm btn-outline-primary">
                                <i class="bi bi-pencil"></i> Edit
                            </a>
                            <button type="button" class="btn btn-sm btn-outline-danger" 
                                    data-bs-toggle="modal" 
                                    data-bs-target="#deleteModal@(reward.RewardId)">
                                <i class="bi bi-trash"></i> Delete
                            </button>
                        </div>
                    </div>

                    <!-- Card Footer with Dates -->
                    <div class="card-footer bg-light">
                        <small class="text-muted">
                            <i class="bi bi-clock me-1"></i>
                            Updated: @reward.UpdatedDate.ToString("MMM dd, yyyy")
                        </small>
                    </div>
                </div>

                <!-- Delete Modal -->
                <div class="modal fade" id="deleteModal@(reward.RewardId)" tabindex="-1">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title">Confirm Delete</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                            </div>
                            <div class="modal-body">
                                <p>Are you sure you want to delete this reward?</p>
                                <div class="alert alert-danger mb-0">
                                    <strong>@reward.RewardName</strong><br/>
                                    <small>This action cannot be undone.</small>
                                </div>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                <form asp-action="Delete" method="post" class="d-inline">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="id" value="@reward.RewardId" />
                                    <button type="submit" class="btn btn-danger">Delete Reward</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    }
    else
    {
        <!-- Empty State -->
        <div class="col-12">
            <div class="card">
                <div class="card-body text-center py-5">
                    <i class="bi bi-gift display-3 text-muted d-block mb-3"></i>
                    <h5 class="text-muted">No rewards available</h5>
                    <p class="text-muted">Create your first reward to get started!</p>
                    <a asp-action="Create" class="btn btn-primary mt-2">
                        <i class="bi bi-plus-circle me-2"></i>Add Reward
                    </a>
                </div>
            </div>
        </div>
    }
</div>

<!-- Rewards Stats Summary -->
<div class="row mt-4">
    <div class="col-md-3">
        <div class="card bg-success text-white">
            <div class="card-body">
                <h6 class="card-title">Available Rewards</h6>
                <h3 class="mb-0">@Model.Count(r => r.Availability && r.StockQuantity > 0)</h3>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card bg-warning text-white">
            <div class="card-body">
                <h6 class="card-title">Low Stock</h6>
                <h3 class="mb-0">@Model.Count(r => r.StockQuantity > 0 && r.StockQuantity < 10)</h3>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card bg-danger text-white">
            <div class="card-body">
                <h6 class="card-title">Out of Stock</h6>
                <h3 class="mb-0">@Model.Count(r => r.StockQuantity == 0)</h3>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card bg-info text-white">
            <div class="card-body">
                <h6 class="card-title">Total Rewards</h6>
                <h3 class="mb-0">@Model.Count()</h3>
            </div>
        </div>
    </div>
</div>