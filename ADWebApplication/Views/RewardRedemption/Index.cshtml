@model IEnumerable<ADWebApplication.Models.RewardRedemption>

@{
    ViewData["Title"] = "Reward Redemptions";
}

@section Styles {
    <style>
        .filter-card {
            background: #f8f9fa;
            border-radius: 8px;
            padding: 1.5rem;
            margin-bottom: 1.5rem;
        }
        .filter-label {
            font-weight: 600;
            font-size: 0.875rem;
            color: #495057;
            margin-bottom: 0.5rem;
        }
        .stats-row {
            display: flex;
            gap: 1rem;
            margin-bottom: 1.5rem;
            flex-wrap: wrap;
        }
        .stat-card {
            flex: 1;
            min-width: 200px;
            background: white;
            border-radius: 8px;
            padding: 1rem;
            border: 1px solid #e0e0e0;
        }
        .stat-value {
            font-size: 1.75rem;
            font-weight: 700;
            color: #0d6efd;
        }
        .stat-label {
            font-size: 0.875rem;
            color: #6c757d;
            margin-top: 0.25rem;
        }
    </style>
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2 class="mb-1">Reward Redemptions</h2>
        <p class="text-muted mb-0">View and filter all redeemed rewards</p>
    </div>
    <div>
        <button type="button" class="btn btn-outline-primary" data-bs-toggle="collapse" data-bs-target="#filterPanel">
            <i class="bi bi-funnel"></i> Filters
        </button>
        <a asp-action="ExportCsv" 
           asp-route-startDate="@ViewBag.StartDate" 
           asp-route-endDate="@ViewBag.EndDate"
           asp-route-status="@ViewBag.Status"
           asp-route-userId="@ViewBag.UserId"
           asp-route-rewardId="@ViewBag.RewardId"
           class="btn btn-success">
            <i class="bi bi-download"></i> Export CSV
        </a>
    </div>
</div>

<!-- Statistics Summary -->
<div class="stats-row">
    <div class="stat-card">
        <div class="stat-value">@Model.Count()</div>
        <div class="stat-label">Total Redemptions</div>
    </div>
    <div class="stat-card">
        <div class="stat-value">@Model.Sum(r => r.PointsUsed).ToString("N0")</div>
        <div class="stat-label">Total Points Redeemed</div>
    </div>
    <div class="stat-card">
        <div class="stat-value">@Model.Select(r => r.UserId).Distinct().Count()</div>
        <div class="stat-label">Unique Users</div>
    </div>
    <div class="stat-card">
        <div class="stat-value">@Model.Count(r => r.RedemptionStatus?.ToUpper() == "COMPLETED")</div>
        <div class="stat-label">Completed</div>
    </div>
</div>

<!-- Filter Panel -->
<div class="collapse @(ViewBag.StartDate != null || ViewBag.EndDate != null || ViewBag.Status != null || ViewBag.UserId != null || ViewBag.RewardId != null ? "show" : "")" id="filterPanel">
    <div class="filter-card">
        <form method="get" asp-action="Index" id="filterForm">
            <div class="row g-3">
                <div class="col-md-3">
                    <label class="filter-label">Start Date</label>
                    <input type="date" name="startDate" class="form-control" value="@ViewBag.StartDate" />
                </div>
                <div class="col-md-3">
                    <label class="filter-label">End Date</label>
                    <input type="date" name="endDate" class="form-control" value="@ViewBag.EndDate" />
                </div>
                <div class="col-md-2">
                    <label class="filter-label">Status</label>
                    <select name="status" class="form-select">
                        <option value="">All Statuses</option>
                        @foreach (var stat in ViewBag.Statuses as List<string>)
                        {
                            <option value="@stat" selected="@(stat == ViewBag.Status)">@stat</option>
                        }
                    </select>
                </div>
                <div class="col-md-2">
                    <label class="filter-label">User ID</label>
                    <input type="number" name="userId" class="form-control" placeholder="User ID" value="@ViewBag.UserId" />
                </div>
                <div class="col-md-2">
                    <label class="filter-label">Reward ID</label>
                    <input type="number" name="rewardId" class="form-control" placeholder="Reward ID" value="@ViewBag.RewardId" />
                </div>
            </div>
            <div class="mt-3 d-flex gap-2">
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-search"></i> Apply Filters
                </button>
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="bi bi-x-circle"></i> Clear Filters
                </a>
            </div>
        </form>
    </div>
</div>

<!-- Results Table -->
<div class="card shadow-sm">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover align-middle" id="redemptionsTable">
                <thead class="table-light">
                    <tr>
                        <th>
                            <input type="checkbox" id="selectAll" class="form-check-input">
                        </th>
                        <th style="cursor: pointer;" onclick="sortTable(0)">
                            Redemption ID <i class="bi bi-arrow-down-up"></i>
                        </th>
                        <th style="cursor: pointer;" onclick="sortTable(1)">
                            Reward <i class="bi bi-arrow-down-up"></i>
                        </th>
                        <th style="cursor: pointer;" onclick="sortTable(2)">
                            User ID <i class="bi bi-arrow-down-up"></i>
                        </th>
                        <th style="cursor: pointer;" onclick="sortTable(3)">
                            Points Used <i class="bi bi-arrow-down-up"></i>
                        </th>
                        <th style="cursor: pointer;" onclick="sortTable(4)">
                            Status <i class="bi bi-arrow-down-up"></i>
                        </th>
                        <th style="cursor: pointer;" onclick="sortTable(5)">
                            Redeemed Date <i class="bi bi-arrow-down-up"></i>
                        </th>
                        <th style="cursor: pointer;" onclick="sortTable(6)">
                            Fulfilled Date <i class="bi bi-arrow-down-up"></i>
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Any())
                    {
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    <input type="checkbox" class="form-check-input row-checkbox" value="@item.RedemptionId">
                                </td>
                                <td><span class="badge bg-secondary">#@item.RedemptionId</span></td>
                                <td>
                                    <div class="d-flex align-items-center gap-2">
                                        @if (!string.IsNullOrEmpty(item.RewardCatalogue?.ImageUrl))
                                        {
                                            <img src="@item.RewardCatalogue.ImageUrl" 
                                                 alt="@item.RewardCatalogue.RewardName" 
                                                 style="width: 40px; height: 40px; object-fit: cover; border-radius: 4px;">
                                        }
                                        else
                                        {
                                            <div style="width: 40px; height: 40px; background: #e9ecef; border-radius: 4px; display: flex; align-items: center; justify-content: center;">
                                                <i class="bi bi-gift text-muted"></i>
                                            </div>
                                        }
                                        <div>
                                            <div class="fw-semibold">@(item.RewardCatalogue?.RewardName ?? "N/A")</div>
                                            <small class="text-muted">ID: @item.RewardId</small>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <span class="badge bg-info">User #@item.UserId</span>
                                </td>
                                <td>
                                    <span class="fw-bold text-primary">@item.PointsUsed.ToString("N0") pts</span>
                                </td>
                                <td>
                                    @if (item.RedemptionStatus?.ToUpper() == "COMPLETED")
                                    {
                                        <span class="badge bg-success">@item.RedemptionStatus</span>
                                    }
                                    else if (item.RedemptionStatus?.ToUpper() == "USED")
                                    {
                                        <span class="badge bg-primary">@item.RedemptionStatus</span>
                                    }
                                    else if (item.RedemptionStatus?.ToUpper() == "PENDING")
                                    {
                                        <span class="badge bg-warning">@item.RedemptionStatus</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">@item.RedemptionStatus</span>
                                    }
                                </td>
                                <td data-sort="@item.RedemptionDateTime.Ticks">
                                    <small>@item.RedemptionDateTime.ToString("MMM dd, yyyy")</small><br/>
                                    <small class="text-muted">@item.RedemptionDateTime.ToString("hh:mm tt")</small>
                                </td>
                                <td data-sort="@(item.FulfilledDatetime?.Ticks ?? 0)">
                                    @if (item.FulfilledDatetime.HasValue)
                                    {
                                        <small>@item.FulfilledDatetime.Value.ToString("MMM dd, yyyy")</small><br/>
                                        <small class="text-muted">@item.FulfilledDatetime.Value.ToString("hh:mm tt")</small>
                                    }
                                    else
                                    {
                                        <span class="text-muted">â€”</span>
                                    }
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="8" class="text-center text-muted py-5">
                                <i class="bi bi-inbox fs-1 d-block mb-2"></i>
                                <p class="mb-0">No redemptions found</p>
                                @if (ViewBag.StartDate != null || ViewBag.EndDate != null || ViewBag.Status != null || ViewBag.UserId != null || ViewBag.RewardId != null)
                                {
                                    <small>Try adjusting your filters</small>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Select All Checkboxes
        document.getElementById('selectAll')?.addEventListener('change', function() {
            const checkboxes = document.querySelectorAll('.row-checkbox');
            checkboxes.forEach(cb => cb.checked = this.checked);
        });

        // Table Sorting
        function sortTable(columnIndex) {
            const table = document.getElementById('redemptionsTable');
            const tbody = table.querySelector('tbody');
            const rows = Array.from(tbody.querySelectorAll('tr')).filter(row => !row.querySelector('td[colspan]'));
            
            // Determine sort direction
            const currentDirection = tbody.getAttribute('data-sort-dir') || 'asc';
            const newDirection = currentDirection === 'asc' ? 'desc' : 'asc';
            tbody.setAttribute('data-sort-dir', newDirection);

            rows.sort((a, b) => {
                // Adjust for checkbox column
                const cellA = a.cells[columnIndex + 1];
                const cellB = b.cells[columnIndex + 1];
                
                let valA, valB;
                
                // Check for data-sort attribute (used for dates)
                if (cellA.hasAttribute('data-sort')) {
                    valA = parseInt(cellA.getAttribute('data-sort'));
                    valB = parseInt(cellB.getAttribute('data-sort'));
                } else {
                    valA = cellA.textContent.trim();
                    valB = cellB.textContent.trim();
                    
                    // Try to parse as number
                    const numA = parseFloat(valA.replace(/[^0-9.-]/g, ''));
                    const numB = parseFloat(valB.replace(/[^0-9.-]/g, ''));
                    
                    if (!isNaN(numA) && !isNaN(numB)) {
                        valA = numA;
                        valB = numB;
                    }
                }
                
                if (valA < valB) return newDirection === 'asc' ? -1 : 1;
                if (valA > valB) return newDirection === 'asc' ? 1 : -1;
                return 0;
            });

            // Re-append sorted rows
            rows.forEach(row => tbody.appendChild(row));
        }

        // Auto-submit form on date/select change
        document.querySelectorAll('#filterForm input[type="date"], #filterForm select').forEach(element => {
            element.addEventListener('change', function() {
                document.getElementById('filterForm').submit();
            });
        });
    </script>
}