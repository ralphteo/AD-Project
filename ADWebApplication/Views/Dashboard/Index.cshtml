@model ADWebApplication.Models.DTOs.AdminDashboardViewModel

@{
    ViewData["Title"] = "Admin Dashboard";
}
<div class="min-h-screen bg-gray-50">
    <!-- Top Navigation -->
    <div class="bg-white border-b border-gray-200">
        <div class="px-6 py-4">
            <div class="d-flex justify-content-between align-items-center">
                <div class="d-flex align-items-center gap-3">
                    <div class="dashboard-icon">
                        <i class="bi bi-activity"></i>
                    </div>
                    <div>
                        <h1 class="h4 mb-0 fw-bold">Admin Dashboard</h1>
                        <p class="text-muted small mb-0">E-Waste Management Analytics</p>
                    </div>
                </div>
                
                <div class="d-flex align-items-center gap-3">
                    <button id="refreshBtn" class="btn btn-sm btn-outline-primary">
                        <i class="bi bi-arrow-clockwise"></i> Refresh
                    </button>
                    <div class="text-end">
                        <p class="small fw-medium mb-0">Admin User</p>
                        <p class="text-muted small mb-0">System Administrator</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Main Content -->
    <div class="container-fluid p-4">
        <!-- KPI Cards -->
        <div id="kpiContainer" class="row g-4 mb-4">
            @await Html.PartialAsync("_KPICards", Model.KPIs)
        </div>

        <!-- Charts Row -->
        <div class="row g-4 mb-4">
            <!-- Collection Trends Chart -->
            <div class="col-lg-8">
                <div class="card">
                    <div class="card-header">
                        <h5 class="card-title mb-0">Collection Trends</h5>
                    </div>
                    <div class="card-body">
                        <canvas id="trendsChart" height="100"></canvas>
                    </div>
                </div>
            </div>

            <!-- Category Distribution -->
            <div class="col-lg-4">
                <div class="card">
                    <div class="card-header">
                        <h5 class="card-title mb-0">E-Waste by Category</h5>
                    </div>
                    <div class="card-body">
                        <canvas id="categoryChart"></canvas>
                    </div>
                </div>
            </div>
        </div>

        <!-- Area Performance -->
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h5 class="card-title mb-0">Area Performance Analysis</h5>
                    </div>
                    <div class="card-body">
                        <canvas id="areaChart" height="80"></canvas>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        // Dashboard data from server
        const dashboardData = @Html.Raw(Json.Serialize(Model));

        // Collection Trends Chart
        const trendsCtx = document.getElementById('trendsChart').getContext('2d');
        new Chart(trendsCtx, {
            type: 'line',
            data: {
                labels: dashboardData.collectionTrends.map(d => d.month),
                datasets: [
                    {
                        label: 'Collections',
                        data: dashboardData.collectionTrends.map(d => d.collections),
                        borderColor: '#8b5cf6',
                        backgroundColor: 'rgba(139, 92, 246, 0.1)',
                        tension: 0.4
                    },
                    {
                        label: 'Weight (kg)',
                        data: dashboardData.collectionTrends.map(d => d.weight),
                        borderColor: '#3b82f6',
                        backgroundColor: 'rgba(59, 130, 246, 0.1)',
                        tension: 0.4
                    }
                ]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false
            }
        });

        // Category Distribution Chart
        const categoryCtx = document.getElementById('categoryChart').getContext('2d');
        new Chart(categoryCtx, {
            type: 'doughnut',
            data: {
                labels: dashboardData.categoryDistribution.map(d => d.name),
                datasets: [{
                    data: dashboardData.categoryDistribution.map(d => d.value),
                    backgroundColor: dashboardData.categoryDistribution.map(d => d.color)
                }]
            }
        });

        // Area Performance Chart
        const areaCtx = document.getElementById('areaChart').getContext('2d');
        new Chart(areaCtx, {
            type: 'bar',
            data: {
                labels: dashboardData.areaPerformance.map(d => d.area),
                datasets: [
                    {
                        label: 'Collections',
                        data: dashboardData.areaPerformance.map(d => d.collections),
                        backgroundColor: '#8b5cf6'
                    },
                    {
                        label: 'Participation %',
                        data: dashboardData.areaPerformance.map(d => d.participation),
                        backgroundColor: '#3b82f6'
                    }
                ]
            }
        });

        // Refresh functionality
        document.getElementById('refreshBtn').addEventListener('click', async () => {
            const response = await fetch('/api/dashboardapi/all');
            const data = await response.json();
            location.reload(); // Simple reload, or update charts dynamically
        });
    </script>
}