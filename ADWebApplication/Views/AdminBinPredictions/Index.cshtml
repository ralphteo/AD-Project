@model ADWebApplication.Models.ViewModels.BinPredictions.BinPredictionsPageViewModel

@{
    ViewData["Title"] = "Bin Fill Predictions";
    Layout = "_DashboardLayout"; 
}

@if (TempData["PredictionRefreshSuccess"] != null)
{
    <div class="alert alert-success">
        @TempData["PredictionRefreshSuccess"]
    </div>
}

<div class="container-fluid">

    <!-- Page title -->
    <div class="mb-4">
        <h2 class="fw-bold">Bin Fill Predictions</h2>
        <p class="text-muted mb-1">
            ML-powered estimation of bin fill progression and collection urgency
        </p>
    </div>

    <!-- Summary cards -->
    <div class="row g-3 mb-4">

        <!-- Total Bins -->
        <div class="col-12 col-md-6 col-lg-3">
            <div class="card shadow-sm h-100">
                <div class="card-body">
                    <h6 class="text-muted">Total Bins</h6>
                    <h3 class="fw-bold">@Model.TotalBins</h3>
                    <small class="text-muted">Active in system</small>
                </div>
            </div>
        </div>

        <!-- High Priority -->
        <div class="col-12 col-md-6 col-lg-3">
            <div class="card shadow-sm h-100 @(Model.HighPriorityBins > 0 ? "border-danger" : "border-success")">
                <div class="card-body">
                    <h6 class="text-muted">Total High Priority Bins</h6>

                    @if (Model.HighPriorityBins > 0)
                    {
                        <h3 class="fw-bold text-danger">@Model.HighPriorityBins</h3>
                        <small class="text-muted">≤ 1 day to 80%</small>
                        <div class="text-danger small">Urgent collection required</div>
                    }
                    else
                    {
                        <h3 class="fw-bold text-success">0</h3>
                        <small class="text-muted">≤ 1 day to 80%</small>
                        <div class="text-success small">No urgent collections</div>
                    }
                </div>
            </div>
        </div>

        <!-- Avg Daily Growth -->
        <div class="col-12 col-md-6 col-lg-3">
            <div class="card shadow-sm h-100">
                <div class="card-body">
                    <h6 class="text-muted">Avg. Daily Fill Growth</h6>
                    <h3 class="fw-bold">@Model.AvgDailyFillGrowthOverall.ToString("0.0")%</h3>
                    <div class="text-muted small">
                        Mean predicted daily fill growth across active bins
                    </div>
                </div>
            </div>
        </div>

        <!-- Bins needing ML prediction refresh -->
        <div class="col-12 col-md-6 col-lg-3">
            <div class="card shadow-sm h-100
                @(Model.NewCycleDetectedCount > 0 ? "border-warning" : "border-success")">

                <div class="card-body">

                    <h6 class="text-muted">ML Prediction Status</h6>

                    @if (Model.NewCycleDetectedCount > 0)
                    {
                        <!-- Yellow if refresh is needed -->
                        <h5 class="fw-bold text-warning mb-1">
                            <i class="bi bi-stars me-1"></i>
                            Refresh required
                        </h5>

                        <div class="small text-muted mb-2">
                            @Model.NewCycleDetectedCount new cycle(s) detected
                        </div>

                        <form asp-controller="AdminBinPredictions" asp-action="Refresh" method="post">
                            @Html.AntiForgeryToken()

                            <button type="submit" class="btn btn-sm btn-outline-secondary w-100">
                                <i class="bi bi-arrow-repeat me-1"></i>
                                Refresh Predictions
                            </button>
                        </form>
                    }
                    else
                    {
                        <!-- Green if up to date -->
                        <h5 class="fw-bold text-success mb-1">
                            <i class="bi bi-check-circle-fill me-1"></i>
                            Up to date
                        </h5>

                        <small class="text-muted">
                            No new collection cycles
                        </small>
                    }
                </div>
            </div>
        </div>
    </div>

    
    <form method="get" class="d-flex align-items-center gap-3 flex-wrap mb-3">

        <input type="hidden" name="sortDir" value="@Model.SortDir" />
        <!-- Filters -->
        <div class="d-flex align-items-center gap-2">
            <i class="bi bi-funnel"></i>

            <select asp-for="SelectedRisk" name="risk" class="form-select form-select-sm w-auto" onchange="this.form.submit()">
                <option value="All">All Risk Levels</option>
                <option value="High">High Risk</option>
                <option value="Medium">Medium Risk</option>
                <option value="Low">Low Risk</option>
            </select>

            <select asp-for="SelectedTimeframe" name="timeframe" class="form-select form-select-sm w-auto" onchange="this.form.submit()">
                <option value="All">All Timeframes</option>
                <option value="3">≤ 3 days</option>
                <option value="7">≤ 7 days</option>
            </select>
        </div>

        <!-- Sorting -->
        <div class="d-flex align-items-center gap-2">

            <!-- Sort direction toggle -->
            <button type="button" class="btn btn-outline-secondary btn-sm" onclick="toggleSortDir()" title="Toggle sort direction">
                <i class="bi bi-arrow-down-up @(Model.SortDir == "desc" ? "sort-desc" : "")"></i>
            </button>

            <select asp-for="SortBy" name="sort" class="form-select form-select-sm w-auto" onchange="updateSortField(this.value)">
                <option value="EstimatedFill">
                    Estimated Fill
                </option>
                <option value="DaysToThreshold">
                    Days to Threshold
                </option>
                <option value="AvgGrowth">
                    Average Daily Growth
                </option>
            </select>

        </div>

        <!-- Generate routes -->
        <button id="generateRoutesBtn" class="btn btn-primary ms-auto">
            <i class="bi bi-diagram-3 me-1"></i>
            Generate Routes for Selected Bins
        </button>

    </form>
</div>

    <!-- alert banner -->
    @if (Model.HighRiskUnscheduledCount > 0)
    {
        <div class="alert alert-danger d-flex align-items-center justify-content-between mb-3">
            <div class="d-flex align-items-center gap-3">
                <i class="bi bi-exclamation-circle-fill fs-4"></i>
                <div>
                    <strong>
                        @Model.HighRiskUnscheduledCount high-risk bin@(Model.HighRiskUnscheduledCount > 1 ? "s are" : " is")
                        not yet scheduled for collection
                    </strong>
                    <div class="small">
                        Immediate action required to prevent overflow
                    </div>
                </div>
            </div>

            <a href="#" class="btn btn-danger">
                <i class="bi bi-lightning-fill me-1"></i>
                View in Route Planning
            </a>
        </div>
        @if (Model.IsDefaultPriorityView)
        {
            <p class="text-muted small mt-2 mb-3 d-flex align-items-center gap-2">
                <i class="bi bi-info-circle"></i>
                Unscheduled high-risk bins are automatically prioritised and displayed first in the table.
            </p>
        }

    }

    @functions {
        string FillBarClass(double fill)
        {
            if (fill >= 75) return "bg-danger";
            if (fill >= 60) return "bg-warning";
            return "bg-success";
        }
    }

    <!-- Prediction Bin table -->
    <div class="card shadow-sm overflow-hidden rounded-3">
        <div class="card-body p-0">
            <table class="table table-hover mb-0 align-middle">
                <thead class="table-light border-bottom">
                    <tr class="align-middle">
                        <th style="width:36px;">
                            <input type="checkbox" id="selectAllBins" />
                        </th>

                        <th class="th-tight">Bin ID</th>
                        <th class="th-tight">Region</th>

                        <th class="th-tight">
                            Estimated Fill
                            <i class="bi bi-info-circle ms-1"
                            data-bs-toggle="tooltip"
                            title="Estimated fill level today based on ML growth">
                            </i>
                        </th>

                        <th class="th-tight text-center">
                            Avg. Daily Fill Growth
                            <i class="bi bi-info-circle ms-1"
                            data-bs-toggle="tooltip"
                            title="Predicted average daily bin fill growth">
                            </i>
                        </th>

                        <th class="th-tight">Est. Days to 80%</th>
                        <th class="th-tight text-center">Risk Status</th>
                        <th class="th-tight text-center">Planning Status</th>

                    </tr>
                </thead>

                <tbody>
                @if (!Model.Rows.Any())
                {
                    <tr>
                        <td colspan="8" class="text-center text-muted py-4">
                            No bins found for the selected filters.
                        </td>
                    </tr>
                }
                else
                {
                    @foreach (var row in Model.Rows)
                    {
                        <tr class="@(row.AutoSelected
                            ? "row-high-risk"
                            : row.NeedsPredictionRefresh
                                ? "row-refresh-needed"
                                : "")">

                            <td style="width:32px;">
                                <input type="checkbox"
                                    class="bin-checkbox"
                                    value="@row.BinId" />
                            </td>
                            
                            <td class="fw-semibold text-center">
                                @row.BinId
                            </td>

                            <td style="max-width: 420px; text-center">
                                <span class="text-wrap">@row.Region</span>
                            </td>

                            <td>
                                @if (row.NeedsPredictionRefresh)
                                {
                                    <div class="fw-bold fs-5">0%</div>

                                    <div class="progress mt-2" style="height: 6px; background-color:#e9ecef;">
                                        <div class="progress-bar @FillBarClass(0)"
                                            role="progressbar"
                                            style="width:@row.EstimatedFillToday%">
                                        </div>
                                    </div>

                                    <div class="text-muted small">
                                        Collected on @row.LastCollectionDateTime.ToString("dd MMM yyyy")
                                    </div>
                                }
                                else
                                {
                                    <div class="fw-bold fs-5">
                                        @row.EstimatedFillToday.ToString("0")%
                                    </div>

                                    <div class="progress mt-2" style="height: 6px; background-color:#e9ecef;">
                                        <div class="progress-bar @FillBarClass(row.EstimatedFillToday)"
                                            role="progressbar"
                                            style="width:@row.EstimatedFillToday%">
                                        </div>
                                    </div>

                                    <div class="text-muted small">
                                        @row.CycleStartDisplay
                                    </div>
                                }
                            </td>

                            <td class="text-nowrap text-center">
                                @if (row.PredictedNextAvgDailyGrowth.HasValue)
                                {
                                    <span class="fw-medium text-secondary">
                                        +@row.PredictedNextAvgDailyGrowth.Value.ToString("0.0")%
                                    </span>
                                    <span class="text-muted small">/ day</span>
                                }
                                else
                                {
                                    <span class="text-muted small">
                                        Prediction refresh needed
                                    </span>
                                }
                            </td>

                            <td>
                                @if (row.NeedsPredictionRefresh)
                                {
                                    <div class="fw-bold text-muted text-center"></div>
                                }
                                else
                                {
                                    <div class="fw-bold">
                                        @row.EstimatedDaysToThreshold
                                        day@(row.EstimatedDaysToThreshold == 1 ? "" : "s")
                                    </div>

                                    @if (row.EstimatedDaysToThreshold <= 3)
                                    {
                                        <div class="text-muted small">ML predicted</div>
                                    }
                                    else
                                    {
                                        <div class="text-muted small">ML predicted</div>
                                    }
                                }
                            </td>

                            <td class="text-center">
                                @if (row.NeedsPredictionRefresh)
                                {
                                    <span class="badge rounded-pill bg-light text-muted">
                                        —
                                    </span>
                                }
                                else if (row.RiskLevel == "High")
                                {
                                    <span class="badge rounded-pill px-3 py-2 bg-danger-subtle text-danger fw-medium"
                                        data-bs-toggle="tooltip"
                                        title="Bin predicted to reach ≥ 80% fill within the next 1 day">
                                        High Risk
                                    </span>
                                }
                                else if (row.RiskLevel == "Medium")
                                {
                                    <span class="badge rounded-pill px-3 py-2 bg-warning-subtle text-warning fw-medium"
                                        data-bs-toggle="tooltip"
                                        title="Bin predicted to reach ≥ 80% fill within the next 3 days">
                                        Medium Risk
                                    </span>
                                }
                                else
                                {
                                    <span class="badge rounded-pill bg-secondary-subtle text-secondary fw-semibold"
                                        data-bs-toggle="tooltip"
                                        title="Bin predicted to reach ≥ 80% fill after 4 days or more">
                                        Low Risk
                                    </span>
                                }
                            </td>

                            <td class="text-center">
                                @if (row.PlanningStatus == "Scheduled")
                                {
                                    <span class="badge bg-success-subtle text-success d-inline-flex align-items-center gap-1">
                                        <i class="bi bi-check-circle"></i>
                                        Scheduled
                                    </span>
                                    <div class="text-muted small">
                                        Route: @row.RouteId
                                    </div>
                                            @if (row.NeedsPredictionRefresh)
                                            {
                                                <div class="mt-1">
                                                    <span class="badge bg-warning-subtle text-warning d-inline-flex align-items-center gap-1"
                                                        data-bs-toggle="tooltip"
                                                        title="A new collection cycle was detected. Prediction refresh is required.">
                                                        <i class="bi bi-stars"></i>
                                                        Prediction Refresh needed
                                                    </span>
                                                </div>
                                            }
                                }
                                else
                                {
                                    @* High risk *@
                                    if (row.RiskLevel == "High")
                                    {
                                        <span class="badge bg-danger-subtle text-danger d-inline-flex align-items-center gap-1"
                                            data-bs-toggle="tooltip"
                                            title="Urgent action required. This high-risk bin has not been scheduled for collection yet.">
                                            <i class="bi bi-exclamation-circle-fill"></i>
                                            Not Scheduled
                                        </span>
                                    }
                                    @* Medium risk *@
                                    else if (row.RiskLevel == "Medium")
                                    {
                                        <span class="badge bg-warning-subtle text-warning d-inline-flex align-items-center gap-1"
                                            data-bs-toggle="tooltip"
                                            title="Collection not required yet. This bin is being monitored for future scheduling.">
                                            <i class="bi bi-exclamation-triangle-fill"></i>
                                            Not Scheduled
                                        </span>
                                    }
                                    @* Low risk *@
                                    else
                                    {
                                        <span class="badge bg-secondary-subtle text-secondary d-inline-flex align-items-center gap-1"
                                            data-bs-toggle="tooltip"
                                            title="No immediate action required.">
                                            <i class="bi bi-info-circle"></i>
                                            Not Scheduled
                                        </span>
                                    }
                                }
                            </td>

                        </tr>
                    }
                }
                </tbody>
            </table>

        </div>
    </div>

</div>

@if (Model.TotalPages > 1)
{
    <nav class="mt-4">
        <ul class="pagination justify-content-center">

            <li class="page-item @(Model.CurrentPage == 1 ? "disabled" : "")">
                <a class="page-link"
                    href="?page=@(Model.CurrentPage - 1)&risk=@Model.SelectedRisk&timeframe=@Model.SelectedTimeframe&sort=@Model.SortBy&sortDir=@Model.SortDir">
                        Previous
                </a>
            </li>

            @for (int i = 1; i <= Model.TotalPages; i++)
            {
                <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                    <a class="page-link"
                       href="?page=@i&risk=@Model.SelectedRisk&timeframe=@Model.SelectedTimeframe&sort=@Model.SortBy&sortDir=@Model.SortDir">
                        @i
                    </a>
                </li>
            }

            <li class="page-item @(Model.CurrentPage == Model.TotalPages ? "disabled" : "")">
                <a class="page-link"
                    href="?page=@(Model.CurrentPage + 1)&risk=@Model.SelectedRisk&timeframe=@Model.SelectedTimeframe&sort=@Model.SortBy&sortDir=@Model.SortDir">
                        Next
                </a>
            </li>

        </ul>
    </nav>
}

@section Scripts {
<script>
    // Bootstrap tooltips
    document.addEventListener("DOMContentLoaded", function () {
        document.querySelectorAll('[data-bs-toggle="tooltip"]')
            .forEach(el => new bootstrap.Tooltip(el));
    });

    // Select all bins
    document.getElementById("selectAllBins")?.addEventListener("change", function () {
        const checked = this.checked;
        document.querySelectorAll(".bin-checkbox")
            .forEach(cb => cb.checked = checked);
    });

    // Generate routes
    document.getElementById("generateRoutesBtn")?.addEventListener("click", function () {
        const selected = [...document.querySelectorAll(".bin-checkbox:checked")]
            .map(cb => cb.value);

        if (selected.length === 0) {
            alert("Please select at least one bin.");
            return;
        }

        console.log("Selected bin IDs:", selected);
        // WIP: POST route assignment
    });

    // Sort direction toggle
    function toggleSortDir() {
        const url = new URL(window.location.href);
        const defaultDir = "@Model.SortDir"; // e.g. "desc"
        const current = url.searchParams.get("sortDir") || "asc";
        url.searchParams.set("sortDir", current === "asc" ? "desc" : "asc");
        url.searchParams.set("page", 1);
        window.location.href = url.toString();
    }

    //
    function updateSortField(field) {
        const url = new URL(window.location.href);
        url.searchParams.set("sort", field);
        url.searchParams.set("page", 1);
        window.location.href = url.toString();
    }
</script>
}

