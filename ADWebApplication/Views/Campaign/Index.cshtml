@model IEnumerable<Campaign>
@{
    ViewData["Title"] = "Campaign Management";
    Layout = "_AdminLayout"; 
}

<!-- PAGE HEADER WITH BACK TO HOME -->
<div class="dash-header mb-4">
    <div class="d-flex justify-content-between align-items-center">
            <div>
                <h2 class="mb-1">Campaign Management</h2>
                <p class="text-muted mb-0">Manage incentive campaigns for e-waste disposal</p>
            </div>
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle me-2"></i>New Campaign
        </a>
    </div>
</div>
<!-- SUCCESS/ERROR ALERTS -->
@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="bi bi-check-circle me-2"></i>@TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="bi bi-exclamation-triangle me-2"></i>@TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<!-- CAMPAIGNS TABLE -->
<div class="card">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover align-middle">
                <thead>
                    <tr>
                        <th>Campaign Name</th>
                        <th>Duration</th>
                        <th>Incentive</th>
                        <th>Status</th>
                        <th class="text-end">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Any())
                    {
                        @foreach (var campaign in Model)
                        {
                            <tr>
                                <!-- Campaign Name & Description -->
                                <td>
                                    <div class="fw-semibold">@campaign.CampaignName</div>
                                    @if (!string.IsNullOrEmpty(campaign.Description))
                                    {
                                        <small class="text-muted">@campaign.Description</small>
                                    }
                                </td>

                                <!-- Date Range -->
                                <td>
                                    <small>
                                        @campaign.StartDate.ToString("MMM dd, yyyy")<br/>
                                        <span class="text-muted">to</span> @campaign.EndDate.ToString("MMM dd, yyyy")
                                        <span class="text-muted">(@campaign.CampaignDurationDays days)</span>
                                    </small>
                                </td>

                                <!-- Incentive Display -->
                                <td>
                                    @if (campaign.IncentiveType == "Multiplier")
                                    {
                                        <span class="badge bg-info">@campaign.IncentiveValue.ToString("0.0")x Points</span>
                                    }
                                    else if (campaign.IncentiveType == "Bonus")
                                    {
                                        <span class="badge bg-success">+@campaign.IncentiveValue Bonus</span>
                                    }

                                    else
                                    {
                                        <span class="badge bg-secondary">@campaign.IncentiveType</span>
                                    }
                                </td>

                                <!-- Status Badge -->
                                <td>
                                    <span class="badge @campaign.StatusBadgeClass">@campaign.Status</span>
                                    @if (campaign.IsActive)
                                    {
                                        <i class="bi bi-circle-fill text-success ms-1" style="font-size: 8px;" title="Currently Running"></i>
                                    }
                                </td>

                                <!-- Action Buttons -->
                                <td class="text-end">
                                    <div class="btn-group btn-group-sm">
                                        <!-- Edit Button -->
                                        <a asp-action="Edit" 
                                           asp-route-id="@campaign.CampaignId" 
                                           class="btn btn-outline-primary"
                                           title="Edit Campaign">
                                            <i class="bi bi-pencil"></i>
                                        </a>

                                       @*  <!-- Activate/Deactivate Toggle -->
                                        @if (campaign.Status == "ACTIVE")
                                        {
                                            <button type="button" 
                                                    class="btn btn-outline-warning" 
                                                    data-bs-toggle="modal" 
                                                    data-bs-target="#deactivateModal@(campaign.CampaignId)"
                                                    title="Deactivate Campaign">
                                                <i class="bi bi-pause-circle"></i>
                                            </button>
                                        }
                                        else if (campaign.Status == "INACTIVE")
                                        {
                                            <button type="button" 
                                                    class="btn btn-outline-success" 
                                                    data-bs-toggle="modal" 
                                                    data-bs-target="#activateModal@(campaign.CampaignId)"
                                                    title="Activate Campaign"
                                                    @(campaign.IsExpired ? "disabled" : "")>
                                                <i class="bi bi-play-circle"></i>
                                            </button>
                                        } *@

                                        <!-- Delete Button -->
                                        <button type="button" 
                                                class="btn btn-outline-danger" 
                                                data-bs-toggle="modal" 
                                                data-bs-target="#deleteModal@(campaign.CampaignId)"
                                                title="Delete Campaign"
                                                @(campaign.Status == "ACTIVE" ? "disabled" : "")>
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </div>

                                    <!-- Activate Modal -->
                                    <div class="modal fade" id="activateModal@(campaign.CampaignId)" tabindex="-1">
                                        <div class="modal-dialog">
                                            <div class="modal-content">
                                                <div class="modal-header">
                                                    <h5 class="modal-title">Activate Campaign</h5>
                                                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                                </div>
                                                <div class="modal-body">
                                                    <p>Are you sure you want to activate this campaign?</p>
                                                    <div class="alert alert-info mb-0">
                                                        <strong>@campaign.CampaignName</strong><br/>
                                                        <small>@campaign.IncentiveTypeDisplay</small>
                                                    </div>
                                                </div>
                                                <div class="modal-footer">
                                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                                    <form asp-action="Activate" method="post" class="d-inline">
                                                        @Html.AntiForgeryToken()
                                                        <input type="hidden" name="id" value="@campaign.CampaignId" />
                                                        <button type="submit" class="btn btn-success">
                                                            <i class="bi bi-play-circle me-2"></i>Activate
                                                        </button>
                                                    </form>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                    <!-- Deactivate Modal -->
                                    <div class="modal fade" id="deactivateModal@(campaign.CampaignId)" tabindex="-1">
                                        <div class="modal-dialog">
                                            <div class="modal-content">
                                                <div class="modal-header">
                                                    <h5 class="modal-title">Deactivate Campaign</h5>
                                                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                                </div>
                                                <div class="modal-body">
                                                    <p>Are you sure you want to deactivate this campaign?</p>
                                                    <div class="alert alert-warning mb-0">
                                                        <strong>@campaign.CampaignName</strong><br/>
                                                        <small>This will stop the campaign incentive immediately.</small>
                                                    </div>
                                                </div>
                                                <div class="modal-footer">
                                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                                    <form asp-action="Deactivate" method="post" class="d-inline">
                                                        @Html.AntiForgeryToken()
                                                        <input type="hidden" name="id" value="@campaign.CampaignId" />
                                                        <button type="submit" class="btn btn-warning">
                                                            <i class="bi bi-pause-circle me-2"></i>Deactivate
                                                        </button>
                                                    </form>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                    <!-- Delete Modal -->
                                    <div class="modal fade" id="deleteModal@(campaign.CampaignId)" tabindex="-1">
                                        <div class="modal-dialog">
                                            <div class="modal-content">
                                                <div class="modal-header">
                                                    <h5 class="modal-title">Confirm Delete</h5>
                                                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                                </div>
                                                <div class="modal-body">
                                                    <p>Are you sure you want to delete this campaign?</p>
                                                    <div class="alert alert-danger mb-0">
                                                        <strong>@campaign.CampaignName</strong><br/>
                                                        <small>This action cannot be undone.</small>
                                                    </div>
                                                </div>
                                                <div class="modal-footer">
                                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                                    <form asp-action="Delete" method="post" class="d-inline">
                                                        @Html.AntiForgeryToken()
                                                        <input type="hidden" name="id" value="@campaign.CampaignId" />
                                                        <button type="submit" class="btn btn-danger">Delete Campaign</button>
                                                    </form>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <!-- Empty State -->
                        <tr>
                            <td colspan="5" class="text-center py-5">
                                <i class="bi bi-calendar-event display-4 text-muted d-block mb-3"></i>
                                <p class="text-muted">No campaigns found. Create your first campaign!</p>
                                <a asp-action="Create" class="btn btn-primary mt-2">
                                    <i class="bi bi-plus-circle me-2"></i>Create Campaign
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- Campaign Stats Summary (Optional) -->
<div class="row mt-4">
    <div class="col-md-3">
        <div class="card bg-success text-white">
            <div class="card-body">
                <h6 class="card-title">Active Campaigns</h6>
                <h3 class="mb-0">@Model.Count(c => c.Status == "ACTIVE")</h3>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card bg-info text-white">
            <div class="card-body">
                <h6 class="card-title">Scheduled</h6>
                <h3 class="mb-0">@Model.Count(c => c.Status == "SCHEDULED")</h3>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card bg-warning text-white">
            <div class="card-body">
                <h6 class="card-title">Inactive</h6>
                <h3 class="mb-0">@Model.Count(c => c.Status == "INACTIVE")</h3>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card bg-secondary text-white">
            <div class="card-body">
                <h6 class="card-title">Expired</h6>
                <h3 class="mb-0">@Model.Count(c => c.Status == "EXPIRED")</h3>
            </div>
        </div>
    </div>
</div>