@model ADWebApplication.ViewModels.OtpVerificationViewModel
@{
    ViewData["Title"] = "Verify OTP";
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <title>Verify OTP</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body { min-height:100vh; display:flex; align-items:center; justify-content:center; background:linear-gradient(135deg,#1e3c72,#2a5298); padding:16px; }
        .card-box { max-width:460px; width:100%; border-radius:14px; }
        .otp-wrap { display:flex; gap:10px; justify-content:center; }
        .otp-box { width:44px; height:52px; text-align:center; font-size:22px; border-radius:10px; border:1px solid #ced4da; }
        .otp-box:focus { outline:none; box-shadow:0 0 0 .2rem rgba(13,110,253,.25); border-color:#86b7fe; }
    </style>
</head>
<body>
<div class="card card-box shadow-lg">
    <div class="card-body p-4">
        <h3 class="text-center mb-1 text-primary">OTP Verification</h3>
        <p class="text-center text-muted mb-3">Enter the 6-digit code sent to your email</p>

        @if (TempData["Message"] != null)
        {
            <div class="alert alert-info">@TempData["Message"]</div>
        }

        <form asp-action="VerifyOtp" method="post" id="otpForm">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <input asp-for="OtpCode" type="hidden" id="OtpCode" />
            <span asp-validation-for="OtpCode" class="text-danger"></span>

            <div class="otp-wrap my-3">
                @for (int i = 0; i < 6; i++)
                {
                    <input class="otp-box" inputmode="numeric" maxlength="1" />
                }
            </div>

            <button class="btn btn-primary w-100 mb-3" type="submit" id="verifyBtn">Verify & Continue</button>

            <div class="d-flex justify-content-between align-items-center">
                <a class="text-decoration-none text-muted" href="@Url.Action("Login","AdminAuth")">‚Üê Back</a>

                <div class="text-end">
                    <button class="btn btn-link p-0 text-decoration-none" type="button" id="resendBtn" disabled>Resend OTP</button>
                    <div class="small text-muted" id="countdownText">Resend available in 30s</div>
                </div>
            </div>
        </form>
    </div>
</div>

<script>
(function () {
    const boxes = Array.from(document.querySelectorAll(".otp-box"));
    const hidden = document.getElementById("OtpCode");
    const form = document.getElementById("otpForm");
    const verifyBtn = document.getElementById("verifyBtn");

    const resendBtn = document.getElementById("resendBtn");
    const countdownText = document.getElementById("countdownText");

    const token = document.querySelector('#otpForm input[name="__RequestVerificationToken"]').value;

    boxes[0].focus();

    function updateHidden() {
        hidden.value = boxes.map(b => b.value).join("");
        return hidden.value;
    }

    function allFilled() {
        return boxes.every(b => b.value && b.value.length === 1);
    }

    boxes.forEach((box, idx) => {
        box.addEventListener("input", () => {
            box.value = box.value.replace(/[^0-9]/g, "").slice(0, 1);
            updateHidden();
            if (box.value && idx < boxes.length - 1) boxes[idx + 1].focus();

            if (allFilled()) {
                verifyBtn.disabled = true;
                form.submit();
            }
        });

        box.addEventListener("keydown", (e) => {
            if (e.key === "Backspace" && !box.value && idx > 0) boxes[idx - 1].focus();
        });

        box.addEventListener("paste", (e) => {
            e.preventDefault();
            const digits = (e.clipboardData.getData("text") || "").replace(/\D/g, "").slice(0, 6);
            digits.split("").forEach((d, i) => { if (boxes[i]) boxes[i].value = d; });
            updateHidden();
            if (allFilled()) {
                verifyBtn.disabled = true;
                form.submit();
            }
        });
    });

    let seconds = 30;
    function tick() {
        if (seconds <= 0) {
            resendBtn.disabled = false;
            countdownText.textContent = "You can resend now.";
            return;
        }
        resendBtn.disabled = true;
        countdownText.textContent = `Resend available in ${seconds}s`;
        seconds--;
        setTimeout(tick, 1000);
    }
    tick();

    resendBtn.addEventListener("click", () => {
        resendBtn.disabled = true;
        countdownText.textContent = "Sending OTP...";

        fetch('@Url.Action("ResendOtp", "AdminAuth")', {
            method: "POST",
            headers: { "RequestVerificationToken": token }
        })
        .then(r => r.json())
        .then(data => {
            alert(data.message);
            boxes.forEach(b => b.value = "");
            updateHidden();
            boxes[0].focus();
            seconds = 30;
            tick();
        })
        .catch(() => {
            alert("Error resending OTP.");
            seconds = 5;
            tick();
        });
    });
})();
</script>

</body>
</html>